@page

@model WildcatMicro.DetailModel
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<section class="mb-5">
    <h2 > <center>Application for  @Model.businessName </center></h2>

    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <table class="table">
                <thead>
                    <tr>
                        <th>Question</th>
                        <th>Response</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Model.ResponsesObj)
                    {
                        <tr>
                            <td> @item.Questions.Question</td>
                            <td> @item.Response</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-12 col-md-2 pb-1 ">
                <a asp-page="./Index" class="btn btn-primary " style="height:5px;">Back to List</a>              
            </div>
        </div>
    </div>
</section>

