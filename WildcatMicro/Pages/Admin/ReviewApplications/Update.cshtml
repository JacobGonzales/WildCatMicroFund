@page

@model WildcatMicro.UpdateModel
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<section class="mb-5">
    <h2> Update Status </h2>
    <hr />
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            @foreach (var item in Model.Status)
            {
                <p>
                    @Html.RadioButton("Status", item.Status)
                    &nbsp; <span>@item.Status</span>
                </p>

            }
            
        </div>
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-12 col-md-2 pb-1 ">
                <a asp-page="./index" class="btn btn-danger btn-square form-control btn-lg" style="height:5px;">Cancle</a>
            </div>
            <div class="col-12 col-md-2 ">
                <button type="submit" class="btn btn-primary btn-square form-control btn-lg" style="height:5px;">Save</button>
            </div>
        </div>
    </div>
</section>

    