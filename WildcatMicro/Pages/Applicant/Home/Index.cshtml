@page
@model WildcatMicro.Pages.Applicant.Home.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="container backgroundWhite">
    <div class="row">
        <div class="col-12 border">
            <div class="container">
                <h2 class="text-center"><br />Wildcat Micro Fund Submission Form </h2>
                <p><br />Thank you for taking time to apply for this program! Please fill out the form to begin the application process.</p>
                <p>The objective of the Wildcat Micro Fund is to help you develop your early-stage business or concept and get it started. Please complete the application below to be considered. If you have any questions or want help filling out this application, contact Bob Gruhler, bobgruhler@weber.edu.  </p>
                <p>
                    <b>To qualify:</b><br/>
                    You must reside in Weber, Davis, Box Elder, or Morgan County.<br />
                    Been in business for less than one year.<br />
                    Sales not more than $3,000 for three successive months.<br />
                    Have not received more than $25,000 in external funding.<br />
                    Score at least 60% on this application.
                </p>
                <br />
                <br />
            </div>
            <div class="container">
                <h4 class="border-bottom">Current Applicant</h4>
                <p><b>Name: </b>@Model.ApplicationUser.FullName</p>
                <p><b>Email: </b>@Model.ApplicationUser.Email</p>
                <p><b>Phone Number: </b>@Model.ApplicationUser.PhoneNumber</p>
            </div>
            <div class="container">
                <br />
                <br />
                <h4 class="border-bottom mb-3">Application</h4>
            </div>
            <div class="container-fluid">
                <form method="post">
                    <input name="userId" value="@Model.ApplicationUser.Id" hidden />
                    @foreach (var question in Model.QuestionObj)
                    {
                        <div class="text-justify">
                            <div class="font-weight-bold">@question.Question.Question</div>
                            @if (question.ResponseList.Count() != 0)
                            {

                                <select class="w-25" asp-items="@question.ResponseList" name="@question.Question.QuestionId" required>
                                    <option></option>
                                </select>

                            }
                            else
                            {
                                <div>
                                    <input class="form-control" type="@question.Question.Type" name="@question.Question.QuestionId" required />
                                </div>
                            }
                        </div>
                        <br />

                    }
                    <br />
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-md" value="question.ResponseList">
                            Submit Form
                        </button>
                        <p></p>
                    </div>
                </form>
            </divc>
        </div>
    </div>
</div>